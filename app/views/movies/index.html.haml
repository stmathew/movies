-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => (@sort == "title"? "title_header hilite": "title_header")}= link_to "Movie Title", :controller => "movies", :action => "index", sort: "title"
      %th Rating
      %th{:class => (@sort == "release_date"? "title_header hilite": "title_header")}= link_to "Release Date", :controller => "movies", :action => "index", sort: "release_date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
